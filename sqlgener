if stmt = '' then do
  out.0 = out.0 + 1
  idx = out.0
  out.idx = left('', 80)            /* 80 spacji */
end
else do
  do p = 1 to length(stmt) by 80
    chunk = substr(stmt, p, 80)     /* wytnij do 80 znak√≥w */
    chunk = left(chunk, 80)         /* dopaduj spacjami do LRECL=80 */
    out.0 = out.0 + 1
    idx = out.0
    out.idx = chunk                 /* ZAPIS pod kolejnym NUMERYCZNYM indeksem */
  end
end
